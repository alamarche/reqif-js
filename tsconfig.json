{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./out",
    "sourceMap": true,
    "rootDir": "./src",
    "paths": {
      "vitest": ["./node_modules/vitest/dist/index.js"],        // only way i can get vitest to cooperate with the typescript compiler
      "vitest/*": ["./node_modules/vitest/dist/*.js"]           // only way i can get vitest to cooperate with the typescript compiler
    },
    "types": ["vitest/globals"]
  },
  "exclude": [
    "./src/**/*.test.ts", "./vitest.config.ts"
  ]
}